{
    "name": "detailnet/dfw-varcrypt-module",
    "description": "Zend Framework 2 Module for dfw-varcrypt",
    "type": "library",
    "keywords": [
        "dfw",
        "detailnet",
        "environment",
        "variables",
        "encryption",
        "module",
        "zf2"
    ],
    "homepage": "https://github.com/detailnet/dfw-varcrypt-module/",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Wolf",
            "email": "ivan.wolf@detailnet.ch"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/log": "~1.0",
        "keboola/php-encryption": "~0.2.1",
        "zendframework/zend-config": "2.*",
        "zendframework/zend-console": "2.*",
        "zendframework/zend-loader": "2.*",
        "zendframework/zend-modulemanager": "2.*",
        "zendframework/zend-mvc": "2.*",
        "zendframework/zend-servicemanager": "2.*",
        "detailnet/dfw-core": "~0.1.1",
        "detailnet/dfw-log": "~0.2.0",
        "detailnet/dfw-varcrypt": "~0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4.5",
        "squizlabs/php_codesniffer" : "~2.2.0",
        "phpmd/phpmd": "~2.1.3",
        "satooshi/php-coveralls": "dev-master",
        "detailnet/blitline": "~0.3.3"
    },
    "autoload": {
        "psr-0": {
            "Detail\\VarCrypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "DetailTest\\VarCrypt\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "*phpunit.xml",
            ".travis.yml",
            "build.xml",
            "build.properties",
            "composer.phar"
        ]
    }
}
